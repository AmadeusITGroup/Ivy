{
    "name": "iv",
    "version": "0.3.0",
    "description": "JS template engine",
    "repository": {
        "type": "git"
    },
    "author": "Bertrand Laporte",
    "scripts": {
        "build": "rm -rf dist/ && tsc",
        "test": "yarn cp-tests && yarn wp-tests",
        "cp-tests": "yarn build && yarn mocha -r ts-node/register src/test/*.spec.ts --reporter dot",
        "wp-tests": "webpack --config-name mocha && yarn mocha dist/mocha.specs.js --reporter dot",
        "samples": "webpack --config-name samples",
        "plugins": "rollup --config rollup.config.js",
        "doc": "rollup --config src/doc/rollup.config.js",
        "doc-watch": "rollup --config src/doc/rollup.config.js -w",
        "doc-dev": "npm-run-all --parallel serve-public doc-watch",
        "serve-public": "serve public"
    },
    "license": "Apache-2.0",
    "bugs": {},
    "devDependencies": {
        "@types/node": "^11.10.4",
        "@types/mocha": "^5.2.7",
        "@types/webpack": "^4.39.2",
        "typescript": "^3.5.2",
        "mocha": "^6.2.1",
        "ts-node": "^8.4.1",
        "tslib": "^1.10.0",
        "webpack": "^4.41.0",
        "webpack-cli": "^3.3.9",
        "ts-loader": "^6.2.0",
        "file-loader": "^4.2.0",
        "vscode-textmate": "^4.2.2",
        "rollup": "^1.27.2",
        "rollup-plugin-typescript2": "^0.25.2",
        "rollup-plugin-css-only": "^1.0.0",
        "rollup-plugin-copy": "^3.1.0",
        "rollup-plugin-terser": "^5.1.2",
        "npm-run-all": "^4.1.5",
        "serve": "^11.2.0"
    },
    "dependencies": {
        "typescript": "^3.5.2",
        "tslib": "^1.10.0"
    }
}